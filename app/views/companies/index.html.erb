<div class="row">
 <div class="col-md-7 col-md-offset-2">
    <h1 class="main-title">SEARCH RESULTS FOR "<%= params[:search_term].upcase %>"</h1>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Symbol</th>
					<th>Company Name</th>
				</tr>
			</thead>
			<tbody>
			<% @companies.each do |company| %>
				<BR><BR>
			    <tr>
			      <td><a href="/companies/<%= company.id %>"><%= company.symbol %></a></td>
			      <td><%= company.name %></td>
			    </tr>
			 <% end %>
			 </tbody>
		</table>
	</div>
</div>